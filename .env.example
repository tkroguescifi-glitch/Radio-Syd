# Anthropic API Key (for Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Cloud credentials (for TTS)
# Set this to the path of your service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account.json

# Optional: Google Cloud TTS voice settings
GOOGLE_TTS_VOICE=en-US-Neural2-D
GOOGLE_TTS_LANGUAGE=en-US

# Optional: Whisper model size (tiny, base, small, medium, large)
WHISPER_MODEL=base

# Optional: Audio settings
SAMPLE_RATE=16000
